{#
/**
 * @file
 * Theme override for:
 * Node Type = Tribal Consultations
 * Field = 	Comment Deadline (field_tc_commentdeadline)
 */
#}
{%
    set title_classes = [
    label_display == 'visually_hidden' ? 'usa-sr-only'
]
%}

{% if label_hidden==false %}
    <h2 class="call-out" {{ title_attributes.addClass(title_classes)}}>{{ label }}</h2>
{% endif %}

<div class="usa-summary-box margin-y-4" role="complementary">
    <div class="usa-summary-box__body">
        {% for item in items %}
            <div class="tablet:grid-col-4 blue-rounded-cards">
                {{ item.content }}
            </div>
        {% endfor %}
    </div>
</div>
