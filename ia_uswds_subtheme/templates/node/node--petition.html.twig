{% extends '/themes/custom/ia_uswds_subtheme/templates/includes/node_layout.html.twig' %}
{% block body %}
    {% set template_selected = content.field_template_to_use['#items'].getString() %}
        {# 1978 Template Table #}
        {% if template_selected == '1978' %}
                <table id="petition-1978" class="usa-table usa-table--striped width-full">
                    {% if node.field_petitioner_identifier is not empty %}
                        <tr>
                            <td class="item">Petitioner Number:</td>
                            <td class="petition-field-data">{{ content.field_petitioner_identifier }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_petitioner_name is not empty %}
                        <tr>
                            <td class="item">Petitioner Name:</td>
                            <td class="petition-field-data">{{ content.field_petitioner_name }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_state is not empty %}
                        <tr>
                            <td class="item">Petitioner State:</td>
                            <td class="petition-field-data">{{ content.field_state }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_acknowledged_or_denied is not empty %}
                        <tr>
                            <td class="item">Acknowledged/Denied/In Process:</td>
                            <td class="petition-field-data">{{ content.field_acknowledged_or_denied }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_date_decision is not empty %}
                        <tr>
                            <td class="item">Date Decision Effective:</td>
                            <td class="petition-field-data">{{ content.field_date_decision }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_current_status is not empty %}
                        <tr>
                            <td class="item">Current Status:</td>
                            <td class="petition-field-data">{{ content.field_current_status }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_currently_in_litigation is not empty %}
                        <tr>
                            <td class="item">Currently in Litigation:</td>
                            <td class="petition-field-data">{{ content.field_currently_in_litigation }}</td>
                        </tr>
                    {% endif %}
                    {% if node.field_ack_reg_rev is not empty %}
                        <tr>
                            <td class="item">Acknowledgment Regulation Revision Chosen by Petitioner:</td>
                            <td class="petition-field-data">{{ content.field_ack_reg_rev }}</td>
                        </tr>
                    {% endif %}
                    {% if content.field_associated_documents %}
                        <tr>
                            <td class="item">Associated Document(s):</td>
                            <td class="petition-field-data">{{ content.field_associated_documents }}</td>
                        </tr>
