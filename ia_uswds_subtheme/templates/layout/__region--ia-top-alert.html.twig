<!-- Site Alert -->
<section class="usa-site-alert usa-site-alert--info usa-site-alert--slim" aria-label="Site alert">
    <div class="usa-alert" >
        <div class="usa-alert__body">
            {{ content }}
        </div>
    </div>
</section>
